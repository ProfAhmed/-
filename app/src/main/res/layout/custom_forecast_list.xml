<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMovie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/tvListForecastTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="20"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvListForecastDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="20"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvListForecastHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="20"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#6c6b6b" />

            <TextView
                android:id="@+id/tvListForecastWind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="20"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#6c6b6b" />

            <TextView
                android:id="@+id/tvListForecastPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="20"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#6c6b6b" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imListForecastListIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/sun_cloud_warm_beautiful_weather128" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvListForecastTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.30 ص"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvListForecastDateAndDayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الاربعاء,11-3-2018"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#6c6b6b" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>